{
  "compilerOptions": {
    "target": "ES2020",            // modern
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],      // includes Promise, Symbol, fetch, etc
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true           // avoids axios type warnings
  },
  "include": ["./**/*.ts"]
}
